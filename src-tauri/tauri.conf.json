{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Phonon",
  "version": "1.2.1",
  "identifier": "com.wakastellar.phonon",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "label": "main",
        "title": "Phonon",
        "width": 800,
        "height": 750
      },
      {
        "label": "floating",
        "title": "Phonon",
        "url": "/floating.html",
        "width": 350,
        "height": 80,
        "minWidth": 300,
        "minHeight": 70,
        "decorations": false,
        "alwaysOnTop": true,
        "transparent": false,
        "visible": false,
        "resizable": true,
        "skipTaskbar": true
      },
      {
        "label": "subtitles",
        "title": "Subtitles",
        "url": "/subtitles.html",
        "width": 800,
        "height": 120,
        "decorations": false,
        "alwaysOnTop": true,
        "transparent": true,
        "visible": false,
        "resizable": true,
        "skipTaskbar": true
      }
    ],
    "security": {
      "csp": "default-src 'self'; script-src 'self'; style-src 'self' 'unsafe-inline'; img-src 'self' asset: https://asset.localhost data:; connect-src 'self' https://api.groq.com https://huggingface.co https://*.huggingface.co https://app.wakascribe.com; font-src 'self' data:"
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "resources": [
      "resources/models/ggml-tiny.bin",
      "icons/tray-iconTemplate.png",
      "icons/tray-iconTemplate@2x.png"
    ],
    "externalBin": []
  }
}
